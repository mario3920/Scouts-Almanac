<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.crud.CadastrarAtividadesController">
   <left>
      <Pane prefHeight="400.0" prefWidth="800.0" BorderPane.alignment="CENTER">
         <children>
            <Label layoutX="43.0" layoutY="23.0" text="Nome da atividade:" />
            <TextField fx:id="textFieldNome" layoutX="43.0" layoutY="47.0" promptText="ex: Cerco de mafeking" />
            <Label layoutX="250.0" layoutY="23.0" text="Ramo da atividade:" />
            <ChoiceBox fx:id="choiceBoxRamo" layoutX="251.0" layoutY="47.0" prefHeight="27.0" prefWidth="117.0" />
            <Label layoutX="77.0" layoutY="101.0" text="Participantes:" />
            <Label layoutX="55.0" layoutY="128.0" text="Mínimo" />
            <ChoiceBox fx:id="choiceBoxminPessoas" layoutX="55.0" layoutY="145.0" prefHeight="27.0" prefWidth="45.0" />
            <Label layoutX="133.0" layoutY="128.0" text="Máximo" />
            <ChoiceBox fx:id="choiceBoxmaxPessoas" layoutX="134.0" layoutY="145.0" prefHeight="27.0" prefWidth="45.0" />
            <Label layoutX="261.0" layoutY="119.0" text="Tempo Médio:" />
            <TextField fx:id="textFieldTempo" layoutX="260.0" layoutY="145.0" onKeyReleased="#tfTempo" prefHeight="27.0" prefWidth="91.0" promptText="30 minutos" />
            <Label layoutX="397.0" layoutY="114.0" text="Descrição" />
            <TextArea fx:id="textAreaDescricao" layoutX="385.0" layoutY="138.0" prefHeight="254.0" prefWidth="408.0" promptText="dividir em equipes para adiquirir armamentos" wrapText="true" />
            <Label layoutX="400.0" layoutY="23.0" text="Materiais" />
            <TextArea fx:id="textAreaMateriais" layoutX="385.0" layoutY="44.0" prefHeight="60.0" prefWidth="408.0" promptText="-Corda" wrapText="true" />
            <Label layoutX="38.0" layoutY="196.0" text="Áreas de Desenvolvimento:" />
            <CheckBox fx:id="checkBoxFisico" layoutX="43.0" layoutY="228.0" mnemonicParsing="false" text="Físico" />
            <CheckBox fx:id="checkBoxIntelectual" layoutX="43.0" layoutY="256.0" mnemonicParsing="false" text="Intelectual" />
            <CheckBox fx:id="checkBoxAfetivo" layoutX="43.0" layoutY="288.0" mnemonicParsing="false" text="Afetivo" />
            <CheckBox fx:id="checkBoxSocial" layoutX="140.0" layoutY="228.0" mnemonicParsing="false" text="Social" />
            <CheckBox fx:id="checkBoxEspiritual" layoutX="140.0" layoutY="256.0" mnemonicParsing="false" text="Espiritual" />
            <CheckBox fx:id="checkBoxCarater" layoutX="140.0" layoutY="288.0" mnemonicParsing="false" text="Caráter" />
            <Label layoutX="231.0" layoutY="196.0" text="Categorias da Atividade:" />
            <ChoiceBox fx:id="choiceBoxCategoria" layoutX="254.0" layoutY="223.0" prefHeight="27.0" prefWidth="105.0" />
            <Button fx:id="btnAdicionar" layoutX="73.0" layoutY="339.0" mnemonicParsing="false" onAction="#btnAdicionarAtividade" text="Adicionar" />
            <Button fx:id="btnCancelar" cancelButton="true" layoutX="205.0" layoutY="339.0" mnemonicParsing="false" text="Cancelar" />
         </children>
      </Pane>
   </left>
</BorderPane>
